{
    "compilerOptions": {
        "allowJs": true,
        // "allowUnreachableCode": true,
        "module": "commonjs",
        "target": "es5",
        // "declaration": true,
        "noImplicitAny": false,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "build"
    },
    "exclude": [
        "build",
        "docs",
        "scripts",
        "node_modules",
        "dist"
    ]
}
